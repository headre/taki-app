<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:layout_weight="1">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmBookActivity"
    android:background="@color/colorBackground">

<LinearLayout
    android:id="@+id/screens_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilmBookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#EDD719"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#fe9828"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#146974"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/cover"/>

        <TextView
            android:id="@+id/blurb"
            android:layout_width="264dp"
            android:layout_height="160dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/cover"
            android:gravity="center_vertical|start"
            android:maxLines="7"
            android:textColor="#000000"
            android:textSize="15sp"
          android:layout_marginStart="8dp"
          android:layout_toEndOf="@id/cover" />

    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/screening_1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#146974"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/go_book_button0"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/ticket" />
    </LinearLayout>


</LinearLayout>

</ScrollView>
  </LinearLayout>
  <Button
    android:id="@+id/_return"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Return"/>
  <Button
    android:id="@+id/_refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Refresh"/>
</LinearLayout>
