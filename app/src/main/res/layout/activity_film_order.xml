<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

<LinearLayout
  android:layout_width="wrap_content"
  android:layout_height="650dp"
  android:layout_weight="1">
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    tools:context=".FilmBookActivity">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".FilmBookActivity">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_margin="15dp"
        android:background="#A8146974"
        android:orientation="vertical">


        <TextView
          android:id="@+id/result"
          android:layout_width="378dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="0dp"
          android:gravity="center"
          android:maxLines="7"
          android:text="My Order"
          android:textColor="#000000"
          android:textSize="30sp" />
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="240dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <LinearLayout
          android:id="@+id/order0"
          android:layout_width="170dp"
          android:layout_height="216dp"
          android:layout_margin="10dp"
          android:background="#000000"
          android:orientation="vertical"
          android:padding="20px">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_weight="8"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#146974"
            android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="170dp"
          android:layout_height="216dp"
          android:layout_margin="10dp"
          android:layout_toRightOf="@+id/order0"
          android:background="#000000"
          android:orientation="vertical"
          android:padding="20px">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_weight="8"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#146974"
            android:textSize="20dp" />
        </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="240dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <LinearLayout
          android:id="@+id/order2"
          android:layout_width="170dp"
          android:layout_height="216dp"
          android:layout_margin="10dp"
          android:background="#000000"
          android:orientation="vertical"
          android:padding="20px">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_weight="8"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#146974"
            android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="170dp"
          android:layout_height="216dp"
          android:layout_margin="10dp"
          android:layout_toRightOf="@+id/order2"
          android:background="#000000"
          android:orientation="vertical"
          android:padding="20px">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_weight="8"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#146974"
            android:textSize="20dp" />
        </LinearLayout>
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="387dp"
        android:layout_height="240dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <LinearLayout
          android:id="@+id/order0"
          android:layout_width="170dp"
          android:layout_height="216dp"
          android:layout_margin="10dp"
          android:background="#000000"
          android:orientation="vertical"
          android:padding="20px">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_weight="8"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#146974"
            android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="170dp"
          android:layout_height="216dp"
          android:layout_margin="10dp"
          android:layout_toRightOf="@+id/order0"
          android:background="#000000"
          android:orientation="vertical"
          android:padding="20px">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_weight="8"
            android:background="#000"
            android:textColor="#ffffff"
            android:textSize="20sp" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#146974"
            android:textSize="20dp" />
        </LinearLayout>
      </RelativeLayout>

    </LinearLayout>

  </ScrollView>
</LinearLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="3">
    <Button
      android:id="@+id/book_btn0"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:text="Return" />

    <Button
      android:id="@+id/book_btn1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/book_btn0"
      android:layout_marginRight="10dp"
      android:text="Refresh" />
  </RelativeLayout>

</LinearLayout>
